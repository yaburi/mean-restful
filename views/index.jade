extends layout

block content
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |   <span id='userInfoName'></span>
                br
                strong Age:
                |   <span id='userInfoAge'></span>
                br
                strong Gender:
                |   <span id='userInfoGender'></span>
                br
                strong Location:
                |   <span id='userInfoLocation'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                    th Edit
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='Gender')
                br
                button#btnAddUser Add User
        // /ADD USER

        // EDIT USER
        h2 Edit User
        #editUser
            fieldset
                input#inputEditUserName(type='text', placeholder='Username')
                input#inputEditUserEmail(type='text', placeholder='Email')
                br
                input#inputEditUserFullname(type='text', placeholder='Full Name')
                input#inputEditUserAge(type='text', placeholder='Age')
                br
                input#inputEditUserLocation(type='text', placeholder='Location')
                input#inputEditUserGender(type='text', placeholder='Gender')
                br
                button#btnEditUser Save
        // /EDIT USER

    // /WRAPPER
